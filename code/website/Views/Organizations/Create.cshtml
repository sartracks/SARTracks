@model SarTracks.Website.ViewModels.NewOrganizationViewModel
@using SarTracks.Website
@using SarTracks.Website.Controllers
@{
    ViewBag.Title = "Create SAR Organization";
}
@*<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
*@<h2>
    Create a New Organization</h2>
<p>
    Complete the following form to register a new organization. The application will
    be reviewed, and an email will be sent to you after verification.</p>
@using (Html.BeginForm())
{
    @Html.ValidationSummary(true, "Account creation was unsuccessful. Please correct the errors and try again.")
    <div>
        <fieldset>
            <legend>Organization Information</legend>
            <div class="editor-label">
                @Html.LabelFor(m => m.Org.LongName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Org.LongName)
                @Html.ValidationMessageFor(m => m.Org.LongName)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Org.Name)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Org.Name)
                @Html.ValidationMessageFor(m => m.Org.Name)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Org.TimeZone)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(m => m.Org.TimeZone, (SelectList)ViewData[OrganizationsController.VIEWDATA_LIST_TIMEZONES])
                @Html.ValidationMessageFor(m => m.Org.LongName)
            </div>

            <div class="editor-lable">
            @Html.LabelFor(m => m.Visibility)
            </div>
            <div class="editor-field">
                @Html.DropDownListFor(m => m.Visibility, (SelectList)ViewData[OrganizationsController.VIEWDATA_LIST_VISIBILITY])
                @Html.ValidationMessageFor(m => m.Visibility)
            </div>

            <div class="editor-label">
                @Html.LabelFor(m => m.Org.AdminAccount)
            </div>
            <div class="editor-field">
                @Model.Org.AdminAccount
            </div>


            <p>
                <input type="submit" value="Register" />
            </p>
        </fieldset>
    </div>
}