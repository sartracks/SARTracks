@model SarTracks.Website.Models.SarUnit

@{
    ViewBag.Title = "StatusTypes";
    ViewBag.Heading = "Status Types";
}



<table id="table" class="data-table" cellspacing="0">
    <thead>
        <tr>
            <th>
            </th>
            <th>
                Name
            </th>
            <th>Active?</th>
            <th>
                Respond to Missions?
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
<span class="AddLink ButtonLink">Add New Status</span>

<div id="StatusDialog" title="" style="display:none;"></div>
<script type="text/javascript">
    function load() {
        $('#table body').html('<tr><td colspan="4" style="text-align:center;">Loading...</td></tr>');

        $.ajax({ type: 'POST', url: '@Url.Action("GetStatusTypes")', data: { q: '@Model.Id' }, dataType: 'json',
            success: function (data) {
                var table = $('#table tbody').html('');
                for (var i in data) {
                    var row = data[i];

                    var html =
                    "<tr><td><img src=\"@Url.Content("~/Content/images/delete.png")\" onclick=\"deleteStatus('" + row.Id + "', '" + row.Name + "');\" />" +
                    "<img class=\"EditLink\" statusId=\"" + row.Id + "\" src=\"@Url.Content("~/Content/images/edit.png")\" />" +
                    "</td><td>" + row.Name +
                    '</td><td>' + row.IsActive +
                    "</td><td>" + row.IsMissionQualified +
                    "</td></tr>";

                    table.append(html);
                }
                updateSort($('#table'));
            }
        });
    }

