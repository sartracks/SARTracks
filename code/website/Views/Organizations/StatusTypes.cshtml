    $(document).ready(function () {
        $('#table').tablesorter({ widgets: ['zebra'] });

        $("#StatusDialog").dialog({
            autoOpen: false, width: 400, height: 330, modal: true,
            buttons: {
                "Save": function () {
                    $.post("@(Url.Action("SaveStatus"))/@Model.Id",
                        $("#StatusForm").serialize(),
                        function (data) {
                            // $TODO: Handle return value                            
                            $("#StatusDialog").dialog("close");
                            load();
                        });
                },
                Cancel: function () { $(this).dialog("close"); }
            }
        });
        $(".EditLink").live("click", function () {
            var id = $(this).attr("statusId");
            $("#StatusDialog").html("")
                .dialog("option", "title", "Edit Status")
                .load("@Url.Action("EditStatus")/@Model.Id?status=" + id, function () { $("#StatusDialog").dialog("open"); });
        });
        $(".AddLink").click(function () {
            $("#StatusDialog").html("")
                .dialog("option", "title", "Add Status")
                .load("@Url.Action("CreateStatus")/@Model.Id", function () { $("#StatusDialog").dialog("open"); });
        });
        
        load();
    });
